doctype html
html
  head
    link(rel="shortcut icon" type="image/png" href="/images/icons/favicon.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      body {
        font-family: Arial, sans-serif;
        background: #ffffff;
        color: #222;
        font-size: 12px;
        padding: 20px;
        margin: 0;
      }
      .container {
        max-width: 800px;
        background: white;
        padding: 20px;
        margin: auto;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      }
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid #52008c;
        padding-bottom: 8px;
        margin-bottom: 15px;
      }
      .company-info {
        text-align: right;
        font-size: 11px;
      }
      h1.invoice {
        font-size: 24px;
        color: #52008c;
        margin: 0;
      }
      .details {
        display: flex;
        justify-content: space-between;
        font-size: 11px;
        margin-bottom: 15px;
      }
      .total {
        font-weight: bold;
        background: #dce2f0;
        padding: 10px;
        text-align: center;
        margin-top: 15px;
      }
      .footer {
        text-align: center;
        font-size: 10px;
        margin-top: 15px;
        color: #666;
      }

  body
    .container
      .header
        h1.invoice #{translate('Payment Receipt')}
        .company-info
          p.strong #{settings.company_name}
          p #{settings.company_address}
          p #{settings.company_reg_number}
      
      .details
        .left
          p.strong #{translate('Date')}: #{moment(model.date).format(dateFormat)}
          p.strong #{translate('Receipt Number')}: # #{model.number}/#{model.year || ""}
        .right
          p.strong #{translate('Client')}: 
          p #{model.client.name}
          p #{model.client.address}
          p #{model.client.phone}
          p #{model.client.email}
      
      .total
        h3 #{translate('Total Paid')}: #{moneyFormatter({amount:model.amount})}
      
      .footer
        p Payment receipt was generated digitally - Kepsgurih ERP
